{
  "esm": true,
  "compilerOptions": {
    "module": "ESNext",
    // "strict": true, //todo remove later
    // "noImplicitAny": true, //todo remove later
    // "strictNullChecks": true, //todo remove later
    "noEmit": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
  },
  "exclude": [
    "node_modules",
    "cdk.out",
    "coverage"
  ],
  "include": [
    "core",
    "serverless-plugin",
    "cf-macro"
  ]
}