{
  "name": "slic-watch",
  "version": "2.1.2",
  "description": "Root project for SLIC Watch",
  "main": "index.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/fourTheorem/slic-watch.git"
  },
  "workspaces": [
    "core",
    "cdk-test-project",
    "serverless-plugin",
    "cf-macro",
    "serverless-test-project",
    "serverless-test-project-alb",
    "serverless-test-project-appsync",
    "sam-test-project"
  ],
  "scripts": {
    "audit": "npm audit --omit dev && npm audit --workspaces --omit dev",
    "lint": "eslint .",
    "lintfix": "eslint --cache --fix .",
    "test:lint": "eslint .",
    "test:packages": "tap --coverage-report=html --no-browser --no-check-coverage */tests/**/*.test.ts",
    "test": "npm run test:lint && npm run test:packages",
    "postversion": "./scripts/sync-macro-version.js",
    "prepare": "test ! -d '.git' || is-ci || husky install"
  },
  "tap": {
    "node-arg": [
      "--no-warnings",
      "--loader=ts-node/esm",
      "--loader=esmock",
      "--experimental-specifier-resolution=node"
    ]
  },
  "devDependencies": {
    "@tsconfig/node-lts-strictest-esm": "^18.12.1",
    "@types/prettier": "2.6.0",
    "@types/tap": "^15.0.7",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.30.0",
    "eslint-config-standard-with-typescript": "^24.0.0",
    "eslint-plugin-import": "^2.23.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "esmock": "^2.1.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "2.0.5",
    "tap": "^16.3.0",
    "ts-node": "^10.9.1",
    "typescript": "~3.9.7"
  },
  "engines": {
    "node": ">=12.0"
  },
  "engineStrict": true,
  "license": "Apache",
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix"
    ]
  },
  "dependencies": {
    "@types/lodash": "^4.14.191",
    "@types/yaml": "^1.9.7",
    "case": "^1.6.3",
    "lodash": "^4.17.21",
    "yaml": "^1.10.2"
  }
}
