{
  "name": "slic-watch",
  "version": "1.0.0-alpha.5",
  "description": "Root project for SLIC Watch",
  "main": "index.js",
  "scripts": {
    "install": "lerna bootstrap",
    "lint": "eslint .",
    "lintfix": "eslint --cache --fix .",
    "test:lint": "eslint .",
    "test:packages": "lerna run test",
    "test": "npm run test:lint && npm run test:packages",
    "lerna:sync": "lerna exec --bail npm install && lerna publish --yes --skip-npm --skip-git --repo-version $npm_package_version",
    "lerna:publish": "lerna publish --yes --skip-git --repo-version $npm_package_version",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^6.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
  },
  "engines": {
    "node": ">=12.0"
  },
  "engineStrict": true,
  "license": "Apache",
  "lint-staged": {
    "*.js": [
      "eslint --cache --fix"
    ]
  }
}